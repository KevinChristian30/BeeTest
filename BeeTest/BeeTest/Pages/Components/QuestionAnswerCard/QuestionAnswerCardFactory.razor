@using BeeTest.Models;

@if (temporaryAnswers.Question.QuestionType.Name == "Multiple Choice")
{
    <MultipleChoiceAnswerCard disabled="@disabled" temporaryAnswers="@temporaryAnswers" />
}
else if (temporaryAnswers.Question.QuestionType.Name == "Boolean")
{
    <BooleanQuestionAnswerCard disabled="@disabled" temporaryAnswers="@temporaryAnswers" />
}
else if (temporaryAnswers.Question.QuestionType.Name == "Checkboxes")
{
    <CheckboxesQuestionAnswerCard disabled="@disabled" temporaryAnswers="@temporaryAnswers" />
}
else if (temporaryAnswers.Question.QuestionType.Name == "Essay")
{
    <EssayQuestionAnswerCard disabled="@disabled"  temporaryAnswers="@temporaryAnswers" />
}
else if (temporaryAnswers.Question.QuestionType.Name == "File")
{
    <FileQuestionAnswerCard disabled="@disabled" temporaryAnswers="@temporaryAnswers" />
}

@code {
    [Parameter]
    public TemporaryAnswers temporaryAnswers { get; set; }

    [Parameter]
    public bool disabled { get; set; }
}
